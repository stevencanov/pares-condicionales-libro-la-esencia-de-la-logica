
#include <iostream>
#include <stdio.h>

	using namespace std;

	int main()

	{
		
		int n;
		
		
	    	cout<< "ingrese un numero menor a ciencuenta" <<endl;    cin >>n;
	
	if (n >= 51 || n <= 0) {
		
		cout<< "el numero el mayor que 50 intente de nuevo" <<endl; 
		return (0);
	}

if(n == 2 || n == 3 || n == 5 || n == 7 || n == 11 || n == 13 || n == 17 || n == 19 || n == 23 || n == 29 || n == 31 || n == 37 ||
       n == 41 || n == 43 || n == 47){
	
	cout<< "el numero que digito es primo" <<endl;
}

else {
	cout<< "el numero que digito no es primo" <<endl;
}

return (0);
	}
	
